{
  "manifest_version": 3,
  "name": "Tab Navigation Shortcuts",
  "description": "Adds shortcuts to navigate between tabs using keyboard shortcuts.",
  "version": "0.1",
  "icons": {
    "32": "icons8-setting-32.png",
    "64": "icons8-setting-64.png"
  },
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "activeTab", "commands"],
  "commands": {
    "switch-to-tab-left": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      },
      "description": "Move the current tab to the left"
    },
    "switch-to-tab-right": {
      "suggested_key": {
        "default": "Ctrl+E"
      },
      "description": "Move the current tab to the right"
    },
    "duplicate-tab": {
      "suggested_key": {
        "default": "Ctrl+K"
      },
      "description": "Duplicate current tab"
    }
  }
}
